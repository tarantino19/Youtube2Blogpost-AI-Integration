# Development Environment Configuration
# Copy this to .env.development for local development

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/yttotext-dev

# JWT Configuration
JWT_SECRET=dev-secret-key-only-for-local-development
JWT_EXPIRE=7d

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000

# YouTube Data API (optional for development)
YOUTUBE_API_KEY=

# AI Services (at least one required)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Transcript Service Configuration
TRANSCRIPT_SERVICE=auto
USE_PROXY=false

# Development Features
ENABLE_MOCK_DATA=true
LOG_LEVEL=debug 