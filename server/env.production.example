# Production Environment Configuration
# Use platform environment variables in production (Heroku, Vercel, etc.)

# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration (use MongoDB Atlas or similar)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/yttotext?retryWrites=true&w=majority

# JWT Configuration (use strong secret)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Client URL (your production frontend URL)
CLIENT_URL=https://your-app-domain.com

# YouTube Data API (optional but recommended)
YOUTUBE_API_KEY=your-production-youtube-api-key

# AI Services (at least one required)
OPENAI_API_KEY=your-production-openai-key
ANTHROPIC_API_KEY=your-production-anthropic-key
GEMINI_API_KEY=your-production-gemini-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Transcript Service Configuration
TRANSCRIPT_SERVICE=auto
USE_PROXY=false
PROXY_URL=

# Production Features
ENABLE_MOCK_DATA=false
LOG_LEVEL=error

# Application
APP_NAME=YTtoText
APP_URL=https://your-app-domain.com 